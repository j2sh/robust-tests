<h1>Posts</h1>

<% @posts.each do |post| %>
  <div class='post'>
    <h2><%= post.title %></h2>
    <div><%= post.body %></div>
  </div>
<% end %>

<%= form_for @new_post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
  </p>
  <%= f.text_area :body %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
